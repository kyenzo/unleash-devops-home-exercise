apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "node-s3-check.fullname" . }}
  labels:
    app: {{ include "node-s3-check.name" . }}
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: {{ include "node-s3-check.name" . }}
  template:
    metadata:
      labels:
        app: {{ include "node-s3-check.name" . }}
    spec:
      containers:
        - name: {{ .Chart.Name }}
          image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
          imagePullPolicy: {{ .Values.image.pullPolicy }}
          ports:
            - containerPort: 3000
          env:
            - name: BUCKET_NAME
              valueFrom:
                configMapKeyRef:
                  name: bucket-config
                  key: bucketName